<style>
    .about {
        display: flex;
        gap: 32px;
        justify-content: space-between;
        align-items: start;
        margin: 15px;
        margin-top: 10vh;
        margin-bottom: 10vh;
    }

    h1 {
        width: 350px;
        font-size: clamp(24px, 5vw, 50px); /* Tamaño de texto adaptable */
        margin: 0;
        padding: 0;
        letter-spacing: -3px;
        font-weight: bold;
    }

    table {
        flex: 1;
        margin: 0;
        padding: 0;
        font-size: clamp(14px, 2vw, 30px); /* Ajuste dinámico del texto */
        width: 100%;
        border-collapse: collapse;
    }

    th,
    td {
        padding: 12px;
        text-align: left;
        line-height: 1;
        font-weight: bold;
        letter-spacing: -1px;
    }

    th {
        font-weight: bold;
    }

    tr:not(:last-child) {
        border-bottom: 1px solid #444;
    }

    /* Tablets */
    @media (max-width: 1024px) {
        .about {
            flex-direction: column;
            gap: 16px;
        }

        h1 {
            font-size: 40px;
        }

        table {
            font-size: 24px;
        }

        td {
            padding: 5px 0 5px 0px;
        }
    }

    /* Móviles (hasta 768px) */
    @media (max-width: 768px) {
        h1 {
            font-size: 32px;
        }

        table {
            font-size: 20px;
        }

        th,
        td {
            display: block;
            width: 100%;
        }

        tr {
            display: flex;
            flex-direction: column;
            border-bottom: 2px solid #444;
        }
    }

    /* Móviles pequeños (hasta 480px) */
    @media (max-width: 480px) {
        h1 {
            font-size: 28px;
        }

        table {
            font-size: 18px;
        }
    }

    .enlace {
        color: #00af66;
        text-decoration: none;
    }
</style>

